# Environment Variables Template for @wonderland/web
# Copy this file to .env.local for local development
# For Vercel deployment, set these in: Dashboard → Settings → Environment Variables

# =============================================================================
# REQUIRED - Authentication (NextAuth)
# =============================================================================

# GitHub OAuth App credentials (create at: https://github.com/settings/developers)
GITHUB_ID=your_github_oauth_app_client_id
GITHUB_SECRET=your_github_oauth_app_client_secret

# NextAuth secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_generated_secret_key

# NextAuth URL (for Vercel, this is auto-set; for local: http://localhost:3000)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# REQUIRED - Database
# =============================================================================

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# =============================================================================
# OPTIONAL - Image Upload (Cloudinary)
# =============================================================================

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# OPTIONAL - Error Tracking (Sentry)
# =============================================================================

SENTRY_DSN=your_sentry_dsn

# =============================================================================
# OPTIONAL - Maps (Mapbox)
# =============================================================================

NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# =============================================================================
# OPTIONAL - GitHub Integration (for blog/gallery sync)
# =============================================================================

GITHUB_TOKEN=ghp_your_personal_access_token
GITHUB_OWNER=your_github_username

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable bundle analyzer (yarn build with ANALYZE=true)
ANALYZE=false

# Deployment URL override
# NEXT_PUBLIC_DEPLOYMENT_URL=http://localhost:8080

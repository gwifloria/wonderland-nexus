# Production Environment Variables (for Vercel)
# Copy these to Vercel Dashboard → Settings → Environment Variables

# Vercel - Enable Yarn 4 Support (REQUIRED)
ENABLE_EXPERIMENTAL_COREPACK=1

# MongoDB
MONGODB_URI=

# NextAuth
NEXTAUTH_URL=
NEXTAUTH_SECRET=

# Optional: GitHub (for blog/gallery sync)
GITHUB_TOKEN=
GITHUB_OWNER=

# Optional: Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional: Sentry
SENTRY_DSN=

# Optional: Mapbox
NEXT_PUBLIC_MAPBOX_TOKEN=
